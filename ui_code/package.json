{
  "name": "heytea-pic-upload",
  "private": true,
  "version": "0.0.1",
  "main": "main.js",
  "scripts": {
    "dev": "vite",
    "start": "electron .",
    "build": "vite build",
    "build:server": "cd server && npm run build",
    "build:all": "npm run build && npm run build:server",
    "obfuscate": "node scripts/obfuscate.js",
    "start:server": "node server/index.js",
    "preview": "vite preview"
  },
  "dependencies": {
    "@imgly/background-removal": "^1.7.0",
    "axios": "^1.4.0",
    "browser-image-compression": "^2.0.2",
    "cropperjs": "^1.5.13",
    "crypto-js": "^4.2.0",
    "install": "^0.13.0",
    "npm": "^11.6.2",
    "vue": "^3.5.24"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^6.0.1",
    "electron": "^39.1.2",
    "electron-builder": "^26.0.12",
    "javascript-obfuscator": "^4.1.1",
    "vite": "^7.2.2",
    "vite-plugin-javascript-obfuscator": "^3.1.0",
    "vite-plugin-obfuscator": "^1.0.5"
  },
  "build": {
    "appId": "com.heytea.upload",
    "productName": "Heytea Upload",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "server/**/*",
      "dist/**/*"
    ],
    "asar": false,
    "extraResources": [
      {
        "from": "server/",
        "to": "server/",
        "filter": [
          "**/*"
        ]
      }
    ],
    "mac": {
      "category": "public.app-category.utilities",
      "hardenedRuntime": true,
      "gatekeeperAssess": false
    },
    "win": {
      "target": "nsis"
    }
  }
}
